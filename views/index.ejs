<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>CHEXSY</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <style>
        .chessboard {
            display: grid;
            grid-template-columns: repeat(8, minmax(0, 1fr));
            grid-template-rows: repeat(8, minmax(0, 1fr));
            width: 400px;
            height: 400px;
            transform: rotate(0deg);
            user-select: none;
        }

        .piece.white {
            color: white;
            filter: drop-shadow(0 0 2px rgba(0, 0, 0, 1));
        }

        .piece.black {
            color: black;
        }

        .flipped {
            transform: rotate(180deg);
        }

        .square {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .square.light {
            background-color: #f0d9b5;
        }

        .square.dark {
            background-color: #b58863;
        }

        .piece {
            font-size: 36px;
            cursor: pointer;
        }

        .piece.draggable {
            cursor: grab;
        }

        .dragging {
            opacity: 0.5;
        }

        /* Rotate pieces for black player */
        .flipped .piece {
            transform: rotate(180deg);
        }
    </style>
</head>

<body>
    <div class="w-full h-screen flex justify-center items-center bg-gray-900 relative">
        <div id="waiting-message"
            class="hidden absolute z-10 bg-gray-900/90 text-white text-2xl font-bold p-10 rounded-lg shadow-lg flex flex-col items-center">
            <div class="mb-4">Waiting for another player to join...</div>
            <div class="animate-spin rounded-full h-10 w-10 border-b-2 border-white"></div>
        </div>

        <div id="game-container" class="flex flex-col items-center">
            <div id="status" class="text-white mb-2 h-6 font-semibold"></div>
            <div id="chessboard" class="chessboard w-96 border-2 border-gray-400 h-96"></div>
            <div id="controls" class="mt-4 flex gap-4">
                <button id="end-game-btn"
                    class="hidden bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded transition">
                    End Game
                </button>
            </div>
        </div>

        <!-- End Game Request Modal -->
        <div id="end-game-modal" class="hidden fixed inset-0 flex items-center justify-center bg-black/50 z-20">
            <div class="bg-gray-800 p-6 rounded-lg shadow-xl border border-gray-600 max-w-sm w-full">
                <h3 class="text-xl font-bold text-white mb-4">End Game Request</h3>
                <p class="text-gray-300 mb-6">Your opponent is asking to end the game. Accept?</p>
                <div class="flex justify-end gap-3">
                    <button id="decline-end-game"
                        class="bg-gray-600 hover:bg-gray-500 text-white px-4 py-2 rounded">No</button>
                    <button id="accept-end-game"
                        class="bg-green-600 hover:bg-green-500 text-white px-4 py-2 rounded">Yes</button>
                </div>
            </div>
        </div>

        <!-- Game Over Modal -->
        <div id="game-over-modal" class="hidden fixed inset-0 flex items-center justify-center bg-black/70 z-30">
            <div class="bg-gray-800 p-8 rounded-lg shadow-2xl border-2 border-yellow-500 max-w-md w-full text-center">
                <h2 class="text-3xl font-extrabold text-yellow-400 mb-4">Game Over</h2>
                <p id="game-over-reason" class="text-xl text-white mb-8"></p>
                <button onclick="location.reload()"
                    class="bg-yellow-500 hover:bg-yellow-400 text-gray-900 font-bold py-3 px-6 rounded-full transition transform hover:scale-105">
                    Play Again
                </button>
            </div>
        </div>

        <!-- Notification Toast -->
        <div id="notification"
            class="hidden fixed bottom-10 right-10 bg-gray-800 border-l-4 border-yellow-500 text-white p-4 rounded shadow-lg transition-transform transform translate-y-0">
            <p id="notification-text"></p>
        </div>
    </div>


    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"
        integrity="sha384-mkQ3/7FUtcGyoppY6bz/PORYoGqOl7/aSUMn2ymDOJcapfS6PHqxhRTMh1RR0Q6+"
        crossorigin="anonymous"></script>
    <script src="/js/chess.min.js"></script>
    <script src="/js/chessgame.js"></script>
</body>

</html>